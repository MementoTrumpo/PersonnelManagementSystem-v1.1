<UserControl
    x:Class="PersonnelManagementSystem.CustomControls.BindablePasswordBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PersonnelManagementSystem.CustomControls"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="30"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <PasswordBox
        x:Name="textBoxUserPassword"
        Padding="30,0,0,0"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        VerticalContentAlignment="Center"
        materialDesign:TextFieldAssist.UnderlineBrush="{StaticResource loadColor1}"
        BorderBrush="DarkGray"
        BorderThickness="0,0,0,1"
        CaretBrush="LightGray"
        FontFamily="Montserrat"
        FontSize="15"
        FontWeight="Medium"
        Foreground="White"
        SnapsToDevicePixels="True">

        <PasswordBox.Background>

            <ImageBrush
                AlignmentX="Left"
                ImageSource="/PersonnelManagementSystem;component/Images/padlockLogo.png"
                Opacity="1"
                Stretch="Uniform"
                Viewbox="0,0,1,1"
                Viewport="0.01 0.1 0.8 0.8" />
        </PasswordBox.Background>
    </PasswordBox>
</UserControl>
